<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="NavigationStatusBar.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:NavigationStatusBar"
       Title="NavigationStatusBar"
       FlyoutBehavior="Disabled">

	<TabBar Shell.BackgroundColor="Magenta"
	        Shell.ForegroundColor="Lime"
	        Shell.TabBarBackgroundColor="Cyan"
	        Shell.TabBarForegroundColor="Red"
	        Shell.TabBarTitleColor="Green"
	        Shell.TabBarUnselectedColor="Blue"
	        Shell.TitleColor="Yellow">

		<Tab Title="Home">
			<ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
		</Tab>

		<Tab Title="Modal">
			<ShellContent ContentTemplate="{DataTemplate local:ModalPage}" />
		</Tab>

	</TabBar>

</Shell>
